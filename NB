#include<stdio.h>
int main()
{
	char strExp[100];  
	int i ,j=0;
	float ans = 0;
	printf("请输入算式：");
	gets_s(strExp, 100);
	//将乘法和除法运算完，并保存在strExp中，将数组中的* /全部变成加减法
	for (i= 1; i < strlen(strExp); i++)
	{
		if (strExp[i] == '*' || strExp[i] == '/')
		{
			switch (strExp[i])
			{
			case'*':strExp[i-1] = (strExp[i - 1] - '0') *(strExp[i + 1] - '0')+'0';
				for (j = i; j < strlen(strExp); j++)
				{
					strExp[j] = strExp[j + 2];
				}
				i--; break;
			case'/':strExp[i-1]= (strExp[i -1] - '0')/ (strExp[i + 1] - '0')+'0';
				for (j = i; j < strlen(strExp); j++)
				{
					strExp[j] = strExp[j + 2];
				}
				i--; break;
			}
		}
	}
	printf("\n先运算乘除后的算式变为：%s\n", strExp);
	ans = strExp[0] - '0';
	for (i = 1; i < strlen(strExp); i++)
	{
		switch (strExp[i])
		{
		case'+':ans += strExp[i + 1] - '0';
			i++; break;
		case'-':ans -= strExp[i + 1] - '0';
			i++; break;
		}
	}
	printf("最终结果：ans=%.0f\n", ans);
	return 0;
}
